<h1>Rooms#index</h1>
<p>Find me in app/views/rooms/index.html.erb</p>

<h2>Rooms for <%= @hotel.name %></h2>

<%= link_to "Add New Room", new_hotel_room_path(@hotel), class: "btn btn-primary mb-3" %>
<%= link_to "Back to Hotels", hotels_path, class: "btn btn-secondary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Type</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.room_type %></td>
        <td>$<%= room.price %></td>
        <td>
          <%= link_to "Edit", edit_hotel_room_path(@hotel, room), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", hotel_room_path(@hotel, room), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>